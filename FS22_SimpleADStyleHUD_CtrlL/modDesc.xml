<?xml version="1.0" encoding="utf-8" standalone="no"?>
<modDesc descVersion="80">
  <author>ChatGPT</author>
  <version>1.0.3.2</version>
  <title>Simple AD-Style HUD (CTRL+L)</title>
  <description>Survey/Datum HUD. Set 0 via HUD button. Cut/Fill = current toolpoint Y - datumY. Lock only while in vehicle; releases on TAB switch or exit.</description>

  <actions>
    <action name="TOGGLE_SIMPLE_HUD" category="GENERAL" />
    <action name="SURVEY_SET_ZERO" category="GENERAL" />
  </actions>

  <inputBinding>
    <actionBinding action="TOGGLE_SIMPLE_HUD" axisType="BUTTON" category="GENERAL">
      <binding device="KB_MOUSE_DEFAULT" input="KEY_l" modifier="KEY_lctrl"/>
      <binding device="KB_MOUSE_DEFAULT" input="KEY_l" modifier="KEY_rctrl"/>
    </actionBinding>
    <actionBinding action="SURVEY_SET_ZERO" axisType="BUTTON" category="GENERAL">
      <binding device="KB_MOUSE_DEFAULT" input="KEY_0" modifier="KEY_lctrl"/>
      <binding device="KB_MOUSE_DEFAULT" input="KEY_0" modifier="KEY_rctrl"/>
    </actionBinding>
  </inputBinding>

  <l10n filenamePrefix="translations/l10n" />

  <extraSourceFiles>
    <sourceFile filename="simpleHudAD.lua"/>
    <sourceFile filename="scripts/HudTextUpdater.lua"/>
  </extraSourceFiles>
</modDesc>
